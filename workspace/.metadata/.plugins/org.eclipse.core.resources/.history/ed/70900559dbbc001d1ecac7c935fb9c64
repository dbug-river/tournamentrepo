package com.rivertech.model;

import java.time.LocalDateTime;
import java.util.List;

/***
 * Class that represent a scheduled timeslot.
 * @author Omar Zammit
 *
 */
public class Timeslot {
	
	/***
	 * Timeslot starting time.
	 */
	private LocalDateTime timeslotStart;
	
	/***
	 * Timeslot end time.
	 */
	private LocalDateTime timeslotEnd;
	
	/***
	 * Games to be played within the timeslot.
	 */
	private List<TimeslotGame> games;
	
	/***
	 * Constructor for Timeslot class.
	 * @param timeslotStart Timeslot starting time.
	 * @param timeslotEnd Timeslot ending time.
	 * @param games Timeslot games.
	 */
	public Timeslot(LocalDateTime timeslotStart, LocalDateTime timeslotEnd, List<TimeslotGame> games) {
		this.timeslotStart = timeslotStart;
		this.timeslotEnd = timeslotEnd;
		this.games = games;
	}

	public LocalDateTime getTimeslotStart() {
		return timeslotStart;
	}
	
	public LocalDateTime getTimeslotEnd() {
		return timeslotEnd;
	}
	
	public List<TimeslotGame> getGames() {
		return games;
	}
}
