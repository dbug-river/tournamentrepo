package com.rivertech.controller;

import java.util.HashMap;
import java.util.Map;

import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

@RestController
@RequestMapping("/api/heart")
public class HeartBeatController {
	
	/***
	 * Get method to check if the tournament server is available.
	 * @return A dictionary containing some values.
	 */
	@GetMapping
    public Map<String, Object> HeartBeat() {
		Map<String, Object> heartBeat = new HashMap<String, Object>();
		heartBeat.put("Version", 1);
		heartBeat.put("Author", "Omar Zammit");
		heartBeat.put("Heartbeat", java.util.UUID.randomUUID());
        return heartBeat;
    }
}
